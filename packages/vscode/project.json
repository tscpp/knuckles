{
  "name": "@knuckles/vscode",
  "projectType": "library",
  "sourceRoot": "{projectRoot}/src",
  "targets": {
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vsce package --no-dependencies --allow-star-activation",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun ./scripts/build.js",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "lint": {}
  }
}
