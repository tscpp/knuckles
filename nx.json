{
  "defaultBase": "main",
  "targetDefaults": {
    "build": {
      "executor": "@dev/nx:build",
      "inputs": ["default", "^default", "{workspaceRoot}/tools/nx/**"],
      "options": {
        "entry": "{projectRoot}/src/index.ts",
        "assets": ["{projectRoot}/README.md", "{workspaceRoot}/LICENSE"],
        "tsconfig": "{projectRoot}/tsconfig.lib.json",
        "declaration": true,
        "sourceMap": true,
        "outputPath": "{projectRoot}/dist",
        "package": {
          "exports": "./index.js",
          "types": "./index.d.ts"
        }
      },
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "test": {
      "executor": "@tools/nx:test",
      "cache": true
    },
    "e2e": {
      "cache": true
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"],
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["{projectRoot}"]
      },
      "outputs": ["{options.outputFile}"],
      "cache": true
    },
    "nx-release-publish": {
      "dependsOn": ["build"],
      "options": {
        "packageRoot": "{projectRoot}/dist"
      }
    }
  },
  "plugins": [
    {
      "plugin": "@nx/playwright/plugin",
      "options": {
        "targetName": "e2e"
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "testTargetName": "test",
        "serveTargetName": "serve",
        "previewTargetName": "preview",
        "serveStaticTargetName": "serve-static"
      }
    }
  ],
  "release": {
    "projects": ["@knuckles/*"],
    "projectsRelationship": "independent"
  },
  "nxCloudAccessToken": "OWUzYjFlOWUtZWZlNS00OTA5LWEzYWEtYjFkMDM0MzU3MjdjfHJlYWQ="
}
