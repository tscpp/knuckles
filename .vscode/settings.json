{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "files.exclude": {
    // "**/node_modules": true,
    "**/.nx": true,
    "tmp": true,
    "**/.pnpm-store": true
  },
  "explorer.fileNesting.patterns": {
    "package.json": "pnpm-lock.yaml, pnpm-workspace.yaml, .npmrc",
    "nx.json": ".nxignore",
    ".prettierrc": ".prettierignore",
    "*.ts": "$(basename).test.ts, $(basename).spec.ts, $(basename).css, $(basename).scss, $(basename).module.css, $(basename).module.scss",
    "*.js": "$(basename).test.js, $(basename).spec.js, , $(basename).d.ts, $(basename).js.map",
    "*.json": "$(basename).schema.json"
  },
  "files.associations": {
    "*.ts.snap": "typescript",
    "*.js.snap": "javascript",
    "conver.json": "jsonc"
  },
  "json.schemas": [
    {
      "fileMatch": ["nx.json"],
      "url": "./node_modules/nx/schemas/nx-schema.json"
    },
    {
      "fileMatch": ["project.json"],
      "url": "./node_modules/nx/schemas/project-schema.json"
    },
    {
      "fileMatch": ["tsconfig/*.json"],
      "url": "https://json.schemastore.org/tsconfig.json"
    }
  ],
  "material-icon-theme.files.associations": {
    "project.json": "nx"
  },
  "eslint.validate": ["json"],
  "eslint.experimental.useFlatConfig": true,
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[markdown]": {
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,
    "editor.rulers": [100]
  },
  "todo-tree.highlights.enabled": false
}
